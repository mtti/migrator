{
  "name": "@mtti/node-migrator",
  "engines": {
    "node": ">=8.10.0"
  },
  "version": "0.1.0",
  "description": "Database migration utility with built-in PostgreSQL support",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "repository": "github:mtti/node-migrator",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install",
    "build": "tsc",
    "test": "npm run lint:ts && npm run jest:ts",
    "test:integration": "npm run lint:js && npm run jest:js",
    "lint:js": "eslint 'integration-tests/**/*.js'",
    "lint:ts": "tslint 'src/**/*.ts'",
    "jest:js": "jest -i --config ./integration-tests/jest.config.json",
    "jest:ts": "jest --config ./jest.config.ts.json",
    "tsc": "tsc",
    "tslint": "tslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/pg": "7.4.13",
    "eslint": "5.15.2",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jest": "24.5.0",
    "pg": "7.9.0",
    "ts-jest": "24.0.0",
    "tslint": "5.14.0",
    "typescript": "3.3.3333"
  },
  "peerDependencies": {
    "pg": "7.x.x"
  },
  "files": [
    "dist"
  ]
}
